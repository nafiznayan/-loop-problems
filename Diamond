#include<stdio.h>
int main()
{
    int i,space,star,n;
    printf("n(half of diamond)=");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(space=1;space<=n-i;space++)
            printf(" ");
        for(star=1;star<=2*i-1;star++)
            printf("*");

          printf("\n");
    }
    for(i=n-1;i>0;i--)
    {
        for(space=1;space<=n-i;space++)
            printf(" ");
        for(star=1;star<=2*i-1;star++)
            printf("*");

            printf("\n");
    }
}
