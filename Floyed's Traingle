#include<stdio.h>
int main()
{
    int i,n,j,p,q;
    printf("Enter number of rows:");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        if(i%2==0)
        {
             p=0,q=1;
        }
        else
        {
             p=1,q=0;
        }
        for(j=1;j<=i;j++)
        {
            if(j%2==1)
            {
                printf("%d",p);
            }
            else
            {
                printf("%d",q);
            }
        }
        printf("\n");
        
        
    }
    return 0;
}
